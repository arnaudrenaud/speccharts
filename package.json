{
  "name": "speccharts",
  "version": "0.3.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/arnaudrenaud/speccharts"
  },
  "main": "index.js",
  "bin": {
    "speccharts": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "test:unit": "jest --testPathIgnorePatterns \".*\\.integ\\.spec\\.ts\"",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:integ": "jest --runInBand --testMatch \"**/*.integ.spec.ts\" --testPathIgnorePatterns \"cli\\.integ\\.spec\\.ts\"",
    "test:cli": "jest --runInBand --testMatch \"**/cli.integ.spec.ts\"",
    "build-and-test": "npm run build && npm run test:unit && npm run test:integ && npm run test:cli"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "commander": "^14.0.0",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.0",
    "typescript": "^5.8.3"
  }
}
